<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_viz"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Spectrum"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="1dp"
        android:background="@drawable/chuoi_viz"
        android:text="Spectrum Mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Wavelength"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Wavelength"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/xoai_viz"
        android:text="Wavelength Mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ListView
        android:id="@+id/list_wifi"
        android:layout_width="312dp"
        android:layout_height="280dp"
        android:background="@drawable/wifi_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <Button
        android:id="@+id/scanwifi"
        android:layout_width="153dp"
        android:layout_height="55dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/button"
        android:text="scan wifi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_wifi" />


</androidx.constraintlayout.widget.ConstraintLayout>